{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Test",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/dynlex",
			"args": [
				"${workspaceFolder}/tests/required/0_simple/main.dl",
				"--emit-llvm"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"visualizerFile": "${workspaceFolder}/dynlex.natvis",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Skip library files",
					"text": "-interpreter-exec console \"skip -gfi **/bits/*.h\""
				}
			],
			"preLaunchTask": "build",
			"miDebuggerPath": "/usr/bin/gdb"
		},
		{
			"name": "Debug DynLex",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/dynlex",
			"args": [
				"${file}"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"visualizerFile": "${workspaceFolder}/dynlex.natvis",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Skip library files",
					"text": "-interpreter-exec console \"skip -gfi **/bits/*.h\""
				}
			],
			"preLaunchTask": "build",
			"miDebuggerPath": "/usr/bin/gdb"
		},
		{
			"name": "Debug DynLex LSP Server",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/dynlex",
			"args": ["--lsp"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"visualizerFile": "${workspaceFolder}/dynlex.natvis",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Skip library files",
					"text": "-interpreter-exec console \"skip -gfi **/bits/*.h\""
				}
			],
			"preLaunchTask": "build",
			"miDebuggerPath": "/usr/bin/gdb"
		},
		{
			"name": "Run VS Code Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/vscode-extension",
				"${workspaceFolder}/tests"
			],
			"outFiles": [
				"${workspaceFolder}/vscode-extension/out/**/*.js"
			],
			"preLaunchTask": "compile-extension"
		}
	],
	"compounds": [
		{
			"name": "Extension + C++ Debugger",
			"configurations": ["Debug DynLex LSP Server", "Run VS Code Extension"],
			"stopAll": true
		}
	]
}