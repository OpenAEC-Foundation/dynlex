{
  "name": "dynlex-language",
  "displayName": "DynLex Language",
  "description": "Language support for the DynLex programming language",
  "version": "0.1.0",
  "publisher": "dynlex",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:dynlex"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dynlex",
        "aliases": [
          "DynLex",
          "dynlex"
        ],
        "extensions": [
          ".dl"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/dynlex-light.svg",
          "dark": "./icons/dynlex-dark.svg"
        }
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "expression",
        "description": "DynLex expression pattern"
      },
      {
        "id": "effect",
        "description": "DynLex effect pattern"
      },
      {
        "id": "section",
        "description": "DynLex section opening"
      },
      {
        "id": "patternDefinition",
        "description": "DynLex pattern definition"
      },
      {
        "id": "intrinsic",
        "description": "DynLex intrinsic function"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "dynlex",
        "scopes": {
          "expression": [
            "entity.name.function"
          ],
          "effect": [
            "keyword.control"
          ],
          "section": [
            "storage.type"
          ],
          "variable": [
            "variable"
          ],
          "comment": [
            "comment"
          ],
          "patternDefinition": [
            "string.regexp"
          ],
          "number": [
            "constant.numeric"
          ],
          "string": [
            "string"
          ],
          "intrinsic": [
            "support.function"
          ]
        }
      }
    ],
    "configurationDefaults": {
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "patternDefinition": {
            "italic": true
          },
          "variable.definition": {
            "bold": true
          }
        }
      }
    },
    "configuration": {
      "type": "object",
      "title": "DynLex",
      "properties": {
        "dynlex.server.port": {
          "type": "number",
          "default": 5007,
          "description": "Port for the DynLex language server"
        },
        "dynlex.server.path": {
          "type": "string",
          "default": "",
          "description": "Path to the dynlex executable. Leave empty to use the bundled executable or PATH."
        },
        "dynlex.server.flags": {
          "type": "string",
          "default": "",
          "description": "Additional flags to pass to the dynlex server"
        },
        "dynlex.server.useExternal": {
          "type": "boolean",
          "default": false,
          "description": "Connect to an externally launched server instead of spawning one (for C++ debugging)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "bundle": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run bundle -- --watch",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
